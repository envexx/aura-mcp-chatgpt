{
  "openapi": "3.1.0",
  "info": {
    "title": "Aura AI Trading Assistant MCP",
    "description": "Advanced MCP server integrating AURA API with ChatGPT, automated trading, and x402 micropayments",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://aura-mcp-chatgpt.vercel.app"
    }
  ],
  "paths": {
    "/api/asset": {
      "get": {
        "summary": "Get Portfolio Analytics",
        "description": "Get detailed portfolio analytics with AI insights",
        "operationId": "getPortfolio",
        "parameters": [
          {
            "name": "address",
            "in": "query",
            "description": "Wallet address to analyze",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      }
    },
    "/api/strategies": {
      "get": {
        "summary": "Get Trading Strategies",
        "description": "Get AI-powered trading strategies and recommendations",
        "operationId": "getStrategies",
        "parameters": [
          {
            "name": "address",
            "in": "query",
            "description": "Wallet address to analyze",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      }
    },
    "/api/chat": {
      "post": {
        "summary": "Chat Assistant",
        "description": "Interactive AI assistant for portfolio analysis and strategy advice",
        "operationId": "chatAssistant",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "Wallet address"
                  },
                  "message": {
                    "type": "string",
                    "description": "User message"
                  }
                },
                "required": ["address"]
              }
            }
          }
        },
        "deprecated": false
      }
    },
    "/api/trade": {
      "post": {
        "summary": "Execute Trade",
        "description": "Execute trades with automation rules and smart order routing",
        "operationId": "executeTrade",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "Wallet address"
                  },
                  "fromToken": {
                    "type": "string",
                    "description": "Token to sell"
                  },
                  "toToken": {
                    "type": "string",
                    "description": "Token to buy"
                  },
                  "amount": {
                    "type": "string",
                    "description": "Amount to trade"
                  },
                  "slippage": {
                    "type": "number",
                    "description": "Allowed slippage percentage"
                  },
                  "automationRules": {
                    "type": "array",
                    "description": "Automated trading rules",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["PRICE_TARGET", "STOP_LOSS", "TAKE_PROFIT"]
                        },
                        "targetPrice": {
                          "type": "number",
                          "description": "Target price for the rule"
                        },
                        "percentage": {
                          "type": "number",
                          "description": "Percentage for the rule"
                        },
                        "action": {
                          "type": "string",
                          "enum": ["BUY", "SELL"]
                        }
                      }
                    }
                  }
                },
                "required": ["address", "fromToken", "toToken", "amount"]
              }
            }
          }
        },
        "deprecated": false
      }
    },
    "/api/privacy-policy": {
      "get": {
        "summary": "Get Privacy Policy",
        "operationId": "getPrivacyPolicy",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "version": { "type": "string" },
                        "lastUpdated": { "type": "string" },
                        "policyDetails": { "type": "object" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}